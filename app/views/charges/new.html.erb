<h3>Premium Account payment info</h2>
<%= form_tag charges_path do %>
  <fieldset> 
    <label class="amount">
      <span>Amount to be charged to credit card: $5.00</span>
    </label>
  </fieldset>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="One month's subscription to digginIt"
          data-amount="500"></script>
<% end %>