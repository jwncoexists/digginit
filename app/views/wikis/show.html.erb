
<% if can? :update, @wiki %>
  <%= link_to "edit wiki", edit_wiki_path, class: 'button' %>
<% end %>
<% if can? :update_collaborators, @wiki %>
  <%= link_to "edit collaborators", wiki_collaborations_path(@wiki.id), class: 'button' %>
<% end %>
<% if can? :destroy, @wiki %>
  <%= link_to "delete wiki", @wiki, method: :delete, class: 'button', confirm: 'Are you sure you want to delete this wiki?' %> 
<% end %>  
<div id="theText" class = "eight columns">
  <h2><%= "#{@wiki.title} by #{@author.name}" %></h2>
  <p><%= markdown @wiki.body %></p>
</div>
<div class = "eight columns">
  <h3>Collaborators</h3>
  <table id="collaborators", class="bordered">
    <% @wiki.users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
      </tr>
    <% end %>
  </table> 
</div>