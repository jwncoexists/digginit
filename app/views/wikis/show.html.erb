

<% if can? :update, @wiki %>
  <%= link_to "Edit Wiki", edit_wiki_path, class: 'button' %>
<% end %>
<% if can? :destroy, @wiki %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'button', confirm: 'Are you sure you want to delete this wiki?' %> 
<% end %>  
<div id="theText" class = "eight columns">
  <h2><%= "#{@wiki.title} Wiki"%></h2>
  <p><%= @wiki.description %></p>
</div>
